{
  "name": "@augustinmauroy/matrix-n",
  "description": "A JavaScript library for matrix operations, including addition, multiplication, and inversion. It supports matrices of any size and provides a simple API for common operations.",
  "version": "1.0.0",
  "type": "module",
  "author": "Augustin Mauroy",
  "license": "MIT",
  "main": "dist/mod.js",
  "files": ["README.md", "LICENSE", "dist"],
  "scripts": {
    "biome:format:fix": "biome format --fix ./",
    "biome:format": "biome format ./",
    "biome:lint:fix": "biome lint --fix ./",
    "biome:lint": "biome lint ./",
    "biome:ci": "biome ci ./",
    "build": "tsc",
    "pre-commit": "node --run biome:lint:fix; node --run biome:format:fix",
    "test": "node --test tests/**/*.test.ts",
    "test:coverage": "node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=./coverage.lcov --test-reporter=spec --test-reporter-destination=stdout tests/**/*.test.ts",
    "types:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.17",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AugustinMauroy/vec3.git"
  }
}
